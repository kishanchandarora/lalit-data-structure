#include <iostream>
using namespace std;

void accept_array(int *arr, int size) {
	cout<<"Enter array elements : "<<endl;
	for(int i=0; i<size; i++) {
		cin>>arr[i];
	}
}


// traverse
void traverse_array(int *arr, int size) {
	cout<<"Elements of array are : "<<endl;
	for(int i=0; i<size; i++) {
		cout<<"arr["<<i<<"] : "<<arr[i]<<endl;
	}
}


// deletion
int deletion_array(int *arr, int &size, int position) {
	position = position - 1;
	if(position == size - 1 ) {
		size = size - 1;
		return arr[position];
	}
	else {
		int data = arr[position];
		for(int i = position; i<size; i++) {
			arr[i] = arr[i+1];
		}
		size = size-1;
		return data;
	}
}

// insertion
// update
// search


int main() {
	int arr[10], position;
	int size = sizeof(arr)/sizeof(int);
	accept_array(arr, size);
	traverse_array(arr, size);
	cout<<"Enter position : ";
	cin>>position;
	if(position<1 && position > size)
		cout<<"Invalid position"<<endl;
	else
		deletion_array(arr, size, position);
	traverse_array(arr, size);



	return 0;
}
